<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AWM.awmtest4">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.AWM.awmtest4.ui.login.LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity android:name="com.AWM.awmtest4.BotonesActivity" />
        <activity android:name="com.AWM.awmtest4.WiFiScannerActivity" />
        <activity android:name="com.AWM.awmtest4.Mqtt.MqttActivity" />
        <activity
            android:name="com.AWM.awmtest4.editarActivity"
            android:label="@string/title_activity_editar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.AWM.awmtest4.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="org.eclipse.paho.android.service.MqttService" />
        <service
            android:name="com.AWM.awmtest4.Mqtt.MqttMessageService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>